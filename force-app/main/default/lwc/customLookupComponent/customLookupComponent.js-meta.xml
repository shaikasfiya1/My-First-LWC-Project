<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>

    </targets>
    <!-- this will appear in Lightning App Builder on right side while adding the component -->
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="apiName" type="String" required="true"  default="Account" 
            label="Enter Object API name"/>
            <property name="objectLabel" type="String" required="true"  default="Account" 
            label="Enter Object Label"/>
            <property name="iconName" type="String" required="true"  default="standard:account" 
            label="Enter Icon for Object" description="Check SLDS for more info on Icons"/>
        </targetConfig>
        <targetConfig targets="lightning__HomePage">
            <property name="apiName" type="String" required="true"  default="Account" 
            label="Enter Object API name"/>
            <property name="objectLabel" type="String" required="true"  default="Account" 
            label="Enter Object Label"/>
            <property name="iconName" type="String" required="true"  default="standard:account" 
            label="Enter Icon for Object" description="Check SLDS for more info on Icons"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>